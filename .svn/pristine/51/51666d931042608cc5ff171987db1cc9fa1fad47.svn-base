/*垂直导航栏css样式*/
#dao{
	width:150px;
	height:400px;
	position:fixed;
	top:120px;
	left:100px;
	z-index:1000;
	border:1px solid #eee;
	border-radius:6px;
	margin:0;
	padding:0;
}
#dao li{
	width:150px;
	height:40px;
	text-align:left;
	margin:0;
	padding:0;
	display: inline-block;
}
#dao a {
	color: #eee;
	display: inline-block;
}
#dao a:hover {
	color:red;
}
a {
	text-decoration: none;
}

/*新加的CSS*/
#rightmain{
	display: block;
	width: 80%;
	margin: 20px 0 0 140px;
	border: 1px solid blue;
	border-radius: 6px;
}
.geceng{
	display: block;
	width: 100%;
	height: 40px;	
	border: 1px solid gray;
	
	background: linear-gradient(to right bottom,rgba(160,82,45,1),rgba(139,71,38,1));
	box-shadow: 5px 5px 2px #444;
	text-align: left;
	color: white;
	font-size: 20px;
	font-weight: bold;
	line-height: 40px;
	text-indent: 40px;
}
.geceng .more{
	font-size: 18px;
	font-weight: normal;
	color: blue;
	float: right;
	cursor: pointer;
}
.geceng .more:hover{
	color: white;
}
/*图片展示区*/
#rightmain {
/*	background-color: gray;*/
	margin: 30px auto;
	text-align: center;
}
#rightmain .center {
	text-align: center;
}
#rightmain .center h2 {
	font-size: 45px;
	letter-spacing: 2px;
	color: #666;
	margin: 10px 0;
}
#rightmain .center p {
	color: #666;
	margin: 10px 0;
}

#rightmain figure {
	border: 1px solid #ddd;
	display: inline-block;
	padding: 4px;
	border-radius: 4px;
	margin: 15px 12px;
	width: 380px;
	text-align: left;
	position: relative;

}
#rightmain figure img {
	display: inline-block;
	vertical-align: middle;
}
#rightmain .left{
	width: 200px;
	float: right;
}
#rightmain figcaption {
	color: white;
	font-size: 13px;
	letter-spacing: 1px;
	line-height: 1.5;
	text-align: left;
	padding: 7px 0 5px 0;
}
#rightmain .title {
	color: #7fffd4;
	font-weight: normal;
}
#rightmain .sat {
	float: right;
	font-size: 13px;
	color: #999;
	font-style: normal;
	position: relative;
	top: 5px;
	right: 5px;
}
#rightmain .price {
	color: #f60;
	font-size: 14px;
}
#rightmain .price strong {
	font-size: 20px;
	letter-spacing: 1px;
}
#rightmain .type {
	width: 90px;
	height: 25px;
	line-height: 25px;
	text-align: center;
	border-bottom-right-radius: 4px;
	background-color: #59b200;
	font-size: 14px;
	color: #fff;
	letter-spacing: 1px;
	position: absolute;
	top: 4px;
	left: 4px;
}
.btn {
	text-align: center;
	line-height: 30px;
    width: 180px;
    height: 30px;
    font-size: 16px;
    letter-spacing: 1px;
    margin: 0 5px;
    color: #fff;
    font-family: 黑体;
}
.btn{
	vertical-align: middle;
    cursor: pointer;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin: 0 4px 0px 4px;
}
#rightmain .buy{
	 background-color: #faa732;
	 display: inline-block;
	 background-image: linear-gradient(to bottom,#fbb450,#f89406);
	 background-repeat: repeat-x;
	 position:absolute;
	 bottom:5px;
	 right:10px;
}
#rightmain .buy:hover{
	background-image: linear-gradient(to bottom,#fbb400,#f89000);
}
#error{
	text-indent:40px;
}
