<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<title>用户注册</title>
		<link rel="stylesheet" type="text/css" href="css/jquery-ui.theme.css"/>
		<link rel="stylesheet" type="text/css" href="css/jquery-ui.css"/>
	    <link rel="stylesheet" type="text/css" href="css/register.css"/>	
	</head>
	<body>
		<div id="registerdiv">
			<h2>用户注册</h2>
			<hr />
			<form id="registerform" method="post">
				
				
				<input type="text" name="name" required="required" id="name" placeholder="请输入账号" />
				<input type="password" name="psw" required="required" id="psw" placeholder="请输入密码" />
				<input type="text" name="realname" required="required" id="realname" placeholder="请输入你的姓名" />
				<input type="text" name="idcard" required="required" id="idcard" placeholder="请输入你的身份证号" />
				<input type="text" name="phone" required="required" id="phone" placeholder="请输入你的电话号码" />
				<input type="text" name="address" required="required" id="address" placeholder="请输入你的联系地址" />
				<a class="large blue button" id="register"> 注&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;册</a><br />
			</form>
		</div>
		
		<div id="error">
			用户名或密码错误！
		</div>
		
		<script type="text/javascript" src="js/jquery-3.2.0.min.js"></script>
		<script type="text/javascript" src="js/jquery-ui.min.js"></script>
		<script type="text/javascript" src="js/jquery.cookie.js"></script>
		<script type="text/javascript" src="js/register.js"></script>
	</body>
</html>